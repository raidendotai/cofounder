    UX:DATAMAP::VIEWS: ["UX:SITEMAP::STRUCTURE", "UX:DATAMAP::STRUCTURE"]

    # webapp & designer layer
    WEBAPP:STORE::GENERATE: ["UX:DATAMAP::VIEWS"]
